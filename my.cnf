[mysqld]
# Set the MySQL server's default character set to UTF-8
character-set-server=utf8mb4

# Set the default collation to UTF-8
collation-server=utf8mb4_unicode_ci

# Set the default storage engine to InnoDB
default-storage-engine=INNODB

# Set the maximum allowed size for a single MySQL packet (default is 4MB)
max_allowed_packet=256M

# Set the maximum number of connections allowed (adjust as needed)
max_connections=100

# Set the key buffer size (adjust as needed)
key_buffer_size=32M

# Set the query cache size (adjust as needed)
query_cache_size=64M

# Set the size for the InnoDB buffer pool (adjust as needed)
innodb_buffer_pool_size=256M

# Set the log file size (adjust as needed)
log_error=/var/log/mysql/error.log